<h1 class="fw-bolder">O'Travail</h1>
<h3 class="fw-semibold mb-5">Le Code du travail à portée de main !</h3>

<%= form_with url:"#", method: :get, class:"form-search mb-5" do %>
  <div class="input-group">
    <span class="input-group-text" style="padding-right:0.125rem;border-right:none;background:none;">
      <i class="fa-solid fa-magnifying-glass text-primary"></i>
    </span>
    <%= text_field_tag :key_word,
      params[:key_word],
      class: "form-control ps-1",
      style: "border-left:none;text-overflow: ellipsis",
      placeholder: "Mot-clé, référence, terme..." %>
      <%= submit_tag "Rechercher", name:"",
      class: "input-group-text btn btn-primary"%>
  </div>
<% end %>

<div class="row">
  <div class="col-6">
    <div class="pe-3 h-100">
      <div class="card text-center p-3">
        <div class="card-title text-center fs-1 text-secondary">
          <i class="fa-regular fa-comments"></i>
        </div>
        <h6 class="card-subtitle fw-semibold">Je veux des réponses <div class="display-inline">sur-mesure</div></h6>
      </div>
    </div>
  </div>
  <div class="col-6">
    <div class="h-100">
      <div class="card text-center h-100 p-3">
        <div class="card-title text-center fs-1 text-secondary">
          <i class="fa-solid fa-folder-open"></i>
        </div>
        <h6 class="card-subtitle fw-semibold">Je veux consulter <div class="display-inline">en catégorie</div></h6>
      </div>
    </div>
  </div>


</div>
